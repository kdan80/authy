<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/css/main.css">
    <script src="https://kit.fontawesome.com/1869eaedf8.js" crossorigin="anonymous"></script>
    <title>Login & register</title>
</head>
<body>
    <main class="root-container">
		<!-- FORM SECTION -->
		<div class="row">
			<!-- REGISTER -->
			<section class="col align-items-center flex-col register">
				<div class="form-wrapper align-items-center">
					<form action="/register" method="POST" class="form register">
						<div class="input-group">
							<i class="fas fa-user"></i>
							<input 
								type="text" 
								name="username"
								title="Enter a username between 5 and 20 characters, using letters and numbers" 
								pattern="[A-Za-z\d]{5,20}"
								placeholder="Username" 
								required
							>
						</div>
						<div class="input-group">
							<i class="fas fa-envelope"></i>
							<input 
								type="email" 
								name="email" 
								placeholder="Email" 
								required
							>
						</div>
						<div class="input-group">
							<i class="fas fa-lock"></i>
							<input 
								type="password" 
								name="password" 
								title="Enter a combination of at least 8 letters (one uppercase), numbers and symbols"
								pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
								placeholder="Password"
								required 
							>
							<i class="far fa-eye-slash"></i>
						</div>
						<button type="submit">
							Register
						</button>
						<p>
							<span>
								Already have an account?
							</span>
							<b class="redirect-link">
								Login here
							</b>
						</p>
					</form>
				</div>
			</section>
			<!-- END REGISTER -->
			<!-- LOGIN -->
			<section class="col align-items-center flex-col login">
				<div class="form-wrapper align-items-center">
					<form action="/login" method="POST" class="form login">
						<div class="input-group">
							<i class="fas fa-envelope"></i>
							<input 
								type="text" 
								name="email" 
								placeholder="Email"
								required
							>
						</div>
						<div class="input-group">
							<i class="fas fa-lock"></i>
							<input 
								type="password" 
								name="password" 
								placeholder="Password"
								required
							>
							<i id="toggle-pw-icon" class="far fa-eye-slash"></i>
						</div>
						<button type="submit">
							Login
						</button>
						<p>
							<span>
								Don't have an account?
							</span>
							<b class="redirect-link">
								Sign up here
							</b>
						</p>
					</form>
				</div>
			</section>
			<!-- END LOGIN -->
		</div>
		<!-- END FORM SECTION -->
		<!-- CONTENT SECTION -->
		<div class="row content-row">
			<!-- LOGIN CONTENT -->
			<section class="col align-items-center flex-col reverse">
				<div class="text login">
					<h2>
						Welcome back
					</h2>
					<p>
